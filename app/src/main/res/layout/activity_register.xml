<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
            android:layout_height="620dp"
            xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img1"
            tools:context=".Register">


        <TextView
                android:text="--------------------"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:typeface="monospace"
                android:textSize="30sp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="normal|bold|italic" />
        <TextView
                android:text="Form Registrasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:typeface="monospace"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold|italic" />
        <TextView
                android:text="--------------------"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView1"
                android:layout_below="@+id/textView"
                android:layout_marginTop="60dp"
                android:textAlignment="center"
                android:typeface="monospace"
                android:textSize="30sp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="normal|bold|italic" />



        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="31dp"
                android:text="Nama"
                android:textSize="18dp"
                android:textStyle="italic|bold" />
        <EditText
                android:layout_width="290dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/edt1"
                android:layout_below="@+id/textView1"/>

        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="39dp"
                android:text="Email"
                android:textSize="18dp"
                android:textStyle="italic|bold" />
        <EditText
                android:layout_width="290dp"
                android:id="@+id/edt2"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edt1"/>

        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="40dp"
                android:text="Alamat"
                android:textSize="18dp"
                android:textStyle="italic|bold" />
        <EditText
                android:layout_width="290dp"
                android:id="@+id/edt3"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edt2"/>

        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="40dp"
                android:text="J K"
                android:textSize="18dp"
                android:textStyle="italic|bold" />

        <RadioGroup
                android:id="@+id/rd1"
                android:layout_width="347dp"
                android:layout_height="81dp"
                android:layout_below="@id/edt3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="11dp"
                android:gravity="center">

            <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Laki-Laki" />

            <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perempuan" />
        </RadioGroup>

        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="71dp"
                android:text="Agama"
                android:textSize="18dp"
                android:textStyle="italic|bold" />
        <EditText
                android:layout_width="290dp"
                android:id="@+id/edt4"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rd1"/>

        <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="36dp"
                android:text="Hobi"
                android:textSize="18dp"
                android:textStyle="italic|bold" />

        <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="Renang" />
        <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBox"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:text="Sepak Bola" />
        <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBox1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:text="Batminton" />

        <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBox2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:text="Futsal" />

        <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="121dp"
                android:text="minat"
                android:textSize="18dp"
                android:textStyle="italic|bold" />

        <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBox3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="Java" />
        <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBox4"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:text="C++" />
        <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBox5"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:text="Kotlin" />

        <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBox6"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:text="Php" />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="78dp"
                android:layout_below="@+id/checkBox7"
                android:background="@drawable/oval"
                android:onClick="btn"
                android:layout_marginTop="40dp"
                android:text="simpan"
                android:textColor="@android:color/white" />

    </RelativeLayout>
</ScrollView>
